# ========================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ========================================

# Ambiente (development, staging, production)
NODE_ENV=development

# Porta do servidor
PORT=3000

# Nome da aplicação
APP_NAME=Estoque API
APP_VERSION=2.0.0

# ========================================
# BANCO DE DADOS
# ========================================

# URL do banco de dados SQLite
DATABASE_URL=file:./dev.db

# ========================================
# LOGGING
# ========================================

# Nível de log (error, warn, info, debug)
LOG_LEVEL=info

# Formato do log (json ou pretty)
LOG_FORMAT=json

# Habilitar log no console (true/false)
LOG_CONSOLE=true

# Habilitar log em arquivo (true/false)
LOG_FILE=false

# Diretório dos logs
LOG_DIR=logs

# ========================================
# SEGURANÇA (OPCIONAL)
# ========================================

# Secret para JWT (MUDE EM PRODUÇÃO!)
JWT_SECRET=dev-secret-change-in-production

# Tempo de expiração do token
JWT_EXPIRES_IN=1d

# Rounds do bcrypt para hash de senha
BCRYPT_ROUNDS=10

# ========================================
# API
# ========================================

# Prefixo da API
API_PREFIX=/api

# Rate limiting - janela de tempo (ms)
RATE_LIMIT_WINDOW=900000

# Rate limiting - máximo de requisições
RATE_LIMIT_MAX=100

# ========================================
# CACHE (OPCIONAL - PARA USO FUTURO)
# ========================================

# Habilitar cache (true/false)
CACHE_ENABLED=false

# TTL do cache em segundos
CACHE_TTL=300

# Redis (se usar cache)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=

# ========================================
# ESTOQUE
# ========================================

# Quantidade mínima padrão
DEFAULT_MIN_QUANTITY=10

# Threshold para alerta de estoque baixo
LOW_STOCK_THRESHOLD=20
